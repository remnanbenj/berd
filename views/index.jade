    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js").
    script(src="/javascripts/jquery.mousewheel.min.js").
    script.
    
      $(".title-panel").mousewheel(function(event) {
        if(event.deltaY != 0) {
          event.preventDefault();
          $(this).scrollLeft($(this).scrollLeft() + (event.deltaFactor*-event.deltaY));
        }
      });
      
      function showHidePanel(panel) {
        if (window.innerWidth > 800) {
          if($('#professional-panel').css('display') == 'block' || $('#projects-panel').css('display') == 'block' || $('#about-panel').css('display') == 'block' || $('#contact-panel').css('display') == 'block'){
            $('.button').css('transform', 'translate(0%, 0%)');
            if($('#'+panel+'-panel').css('display') != 'block') { window.location.hash = panel; $('.'+panel+'-button').css('transform', 'translate(0%, -2vh)'); setTimeout(()=>{ $('#'+panel+'-panel').slideToggle(200);}, 100); }
            else { history.replaceState(null, null, ' '); }
            $('.title-panel').slideUp(200);
          } else {
            window.location.hash = panel;
            $('#'+panel+'-panel').slideToggle(200);
            $('.'+panel+'-button').css('transform', 'translate(0%, -2vh)');
          }
          
        } else {
          if($('.button-phone-'+panel).css('display') != 'block'){
            $([document.documentElement, document.body]).animate({
              scrollTop: $('.'+panel+'-button').offset().top - 15
            }, 200);
          }
          window.location.hash = panel;
          $('.button-phone-'+panel).slideToggle(200);
        }
      }
      
      
      
      
      
      

















